mixin mixinFooter
    footer
        ul(class="desktop:flex desktop:justify-around")
            -var contentsFooter = {'https://i.ibb.co/w07dKj8/pug.png':'Pug. Estructura y contenido.', 'https://i.ibb.co/b2c5x3M/tailwind3.png':'Tailwind 3. Estilos', 'https://i.ibb.co/gRwMw39/git.png':'Git. Control de versiones.','https://i.ibb.co/TKt7k8q/pexels.webp':'Pexels. Imágenes', 'https://i.ibb.co/kQwFPyW/openAI.png':'OpenIA. Textos e imágenes', 'https://i.ibb.co/CtkNdFL/figma.png':'Figma. Diseño.'}
            each text, image in contentsFooter
                li(class="flex flex-row items-center my-8m tablet:w-[70%] tablet:mx-auto tablet:my-16t desktop:flex-col desktop:w-[10vw] desktop:mx-auto")
                    figure(class="mx-8m my-[0px] w-[12vw] tablet:w-[10vw] desktop:my-16d desktop:w-[3vw] desktop:mx-auto")
                        img(src=image, alt=text, title=text)
                    p= text
        h3 Mayo 2023
        a(class="block mb-32d px-8m w-auto text-gray-g text-center", href="https://platzi.com/p/ricardo-racm/")
            p(class="inline-block w-auto") Ricardo Cifuentes.
                br
                | Portafolio y perfil.
            figure(class="inline-block m-[0px] w-[16%] ml-[5%] tablet:w-[7%] tablet:ml-[3%] desktop:w-[4%]")
                img(src="https://i.ibb.co/xjtQwTQ/platzi.webp", alt="Perfil en Platzi" title="Perfil en Platzi") 